            </Button.Effect>
        </Button>
        <Label Content="Buses" HorizontalAlignment="Left" Height="95.338" Margin="498.477,62.87,0,0" VerticalAlignment="Top" Width="167.004" FontSize="36" FontFamily="Leelawadee UI"/>

    </Grid>
