<Page x:Class="CBDBusRouting.GroupsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CBDBusRouting"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Groups Page">

    <Grid Background="White">
        <!--This lable will be auto populated with the next ID to use for the group -->
        <Label Content="Name: " HorizontalAlignment="Left" Height="53.205" Margin="331.986,141.324,0,0" VerticalAlignment="Top" Width="152.257" FontSize="14" FontFamily="Leelawadee UI"/>
        <Label Content="Location: " HorizontalAlignment="Left" Height="61.408" Margin="331.986,202.873,0,0" VerticalAlignment="Top" Width="152.257" FontSize="14" FontFamily="Leelawadee UI"/>
        <Label Content="Leader: " HorizontalAlignment="Left" Height="55.393" Margin="331.986,264.281,0,0" VerticalAlignment="Top" Width="126.199" FontSize="14" FontFamily="Leelawadee UI"/>
        <Label Content="Group Size: " HorizontalAlignment="Left" Height="53.34" Margin="331.986,319.674,0,0" VerticalAlignment="Top" Width="152.257" FontSize="14" FontFamily="Leelawadee UI"/>
        <Label Content="Student Leader:" HorizontalAlignment="Left" Height="53.205" Margin="331.986,381.356,0,0" VerticalAlignment="Top" Width="191.343" FontSize="14" FontFamily="Leelawadee UI"/>
        <TextBox Name="groupName" HorizontalAlignment="Left" Height="30.638" Margin="571.101,141.324,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304.008" FontFamily="Leelawadee UI"/>
        <TextBox Name="leader" HorizontalAlignment="Left" Height="30.637" Margin="571.101,264.281,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304.008" FontFamily="Leelawadee UI"/>
        <TextBox Name="groupSize" HorizontalAlignment="Left" Height="30.637" Margin="571.101,319.674,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304.008" FontFamily="Leelawadee UI" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox HorizontalAlignment="Left" Height="30.639" Margin="571.101,381.356,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304.008" FontFamily="Leelawadee UI"/>
        <CheckBox Name="isAccess" Content="Wheelchair Access" HorizontalAlignment="Left" Height="26" Margin="574,457,0,0" VerticalAlignment="Top" Width="139" FontFamily="Leelawadee UI"/>
        <Button Content="Save It!!" HorizontalAlignment="Left" Height="51.612" Margin="315.573,521.249,0,0" VerticalAlignment="Top" Width="567.616" Background="#FFB81F31" BorderBrush="{x:Null}" Foreground="White" FontFamily="Leelawadee UI" FontWeight="Bold" FontSize="16" Click="Button_Click">
            <Button.Effect>
                <DropShadowEffect Color="#FF5D5D5D"/>
            </Button.Effect>
        </Button>
        <ComboBox Name="locationDropdown" HorizontalAlignment="Left" Height="30.636" Margin="573.793,202.873,0,0" VerticalAlignment="Top" Width="301.316" FontFamily="Leelawadee UI">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Label Content="Groups" HorizontalAlignment="Left" Height="94.138" Margin="493.442,31.6,0,0" VerticalAlignment="Top" Width="164.398" FontSize="36" FontFamily="Leelawadee UI"/>
    </Grid>
</Page>
